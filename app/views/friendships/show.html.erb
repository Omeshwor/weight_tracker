<% if current_user.friends.any? %>
<div align="center">
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Entered Date</th>
        <th scope="col">Weight</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tracked_friends.each do |friend| %>
      <tr>
        <th scope="row"><%= friend.id %></th>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td>
          <%= link_to "Show Friend info", user_path(friend),
              class: "btn btn-info" %> |
          <%= link_to "Remove Friend", friendship_path(friend), method: :delete,
              data: {confirm: "Are you sure?"},class: "btn btn-danger" %>
        </td>
      </tr>
      <% end %>
      <div class="digg_pagination">
        <div class="page_info">
          <%= page_entries_info @tracked_friends %>
        </div>
        <%= will_paginate @tracked_friends %>
      </div>

    </tbody>
  </table>
</div>
<% end %>
